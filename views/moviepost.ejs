<%- include('partials/header'); %>
<% i=0 %>

<section id="movie-info-section" style="background-image:url(https://image.tmdb.org/t/p/original/<%=movieimage%>)">
  <div class="movieinfo-container">
    <div class="container">
      <div class="movieinfo">
        <div class="movie-image">
          <img class="image" src="https://image.tmdb.org/t/p/original/<%=movieimage%>" width="350px" height="410px" alt="image not found">
          <div class="moviepost-overlay">
            <div class="overlay-details">
              <h1 class="info" style="color:#fff"><%= movietitle  %> </h1>
              <p class="info" style="color:#b5aeae"> <%= voteaverage %>/10</p>
              <p class="info" style="color:#b5aeae"> <%= releasedate %></p>
            </div>
          </div>

          <div class="movie-details">
            <div class="h2">
              <h1 class="info" style="color:#fff"><%= movietitle  %> </h1>
            </div>
            <div class="p-tags" style="color:#fff">
              <strong>
                <p class="info first-info">
                  <%genres=genre.split("-");%>
                  <%for(k=0;k<genres.length;k++){%>
                  <%=genres[k].replace(' ','-')%>
                  &nbsp;&nbsp;
                  <%}%>
              </p>
            </strong>

            <p class="info"><strong style="color:#ddd9d9">Director</strong> : &nbsp; <%= profile.Directing %></p>
                <p class="info"><strong style="color:#ddd9d9">Writer</strong> : &nbsp; <%= profile.Writing %></p>
                <p class="info"><strong style="color:#ddd9d9">Rating</strong> : &nbsp; <%= voteaverage %>/10</p>
                <p class="info"><strong style="color:#ddd9d9">Release date</strong> : &nbsp; <%= releasedate %></p>
            </div>
          </div>
          <div class="alert alert-success" id="success-alert">
            <strong>Success! </strong> Movie added to your watchlist.
          </div>
          <div class="stars">
            <form id="rate-movie-form" action="/moviepost" method="post">
              <input class="star star-5" id="star-5" type="radio" value="5" name="star" required />
              <label class="star star-5" for="star-5"></label>
              <input class="star star-4" id="star-4" type="radio" value="4" name="star" />
              <label class="star star-4" for="star-4"></label>
              <input class="star star-3" id="star-3" type="radio" value="3" name="star" />
              <label class="star star-3" for="star-3"></label>
              <input class="star star-2" id="star-2" type="radio" value="2" name="star" />
              <label class="star star-2" for="star-2"></label>
              <input class="star star-1" id="star-1" type="radio" value="1" name="star" checked />
              <label class="star star-1" for="star-1"></label>
              <button id="myWish" class="watch-list-button btn" value="<%=id%>,<%= movietitle %>" data-tippy-content="Rate this movie & Add to Your Watch List"  data-tippy-arrow="false" data-tippy-placement="bottom" type="submit"
                name="watchlist" onclick="list()">+</button>
            </form>


          </div>
        </div>
      </div>
    </div>
</section>
